{
  "webserver": {
    "port": 8081
  },
  "linshare": {
    "baseUrl": "http://files.linshare.local/linshare/webservice/rest",
    "jwt": {
      "issuer": "linshare-editor",
      "expiresIn": "5m",
      "algorithm": "RS256",
      "token": {
        "authorizationHeader": "authorization",
        "authorizationHeaderPrefix": "Bearer "
      }
     }
  },
  "log": {
    "file": {
      "enabled": false,
      "options": {
        "filename": "./log/application.log",
        "level": "info"
      }
    },
    "console": {
      "enabled": true,
      "options": {
        "level": "debug"
      }
    }
  },
  "db": {
    "connectionOptions": {
      "w": 1,
      "autoReconnect": true,
      "socketTimeoutMS": 10000,
      "keepAlive": 10000,
      "poolSize": 10,
      "useNewUrlParser": true
    },
    "connectionString": "mongodb://localhost:20018/linshare-oo-editor"
  },
  "documentServer": {
    "signature": {
      "browser": {
        "enable": false,
        "algorithm": "HS256",
        "secret": "secret",
        "expiresIn": "5m"
      },
      "request": {
        "incoming": {
          "enable": false,
          "algorithm": "HS256",
          "secret": "secret",
          "authorizationHeader": "authorization",
          "authorizationHeaderPrefix": "Bearer "
        }
      }
    }
  }
}
